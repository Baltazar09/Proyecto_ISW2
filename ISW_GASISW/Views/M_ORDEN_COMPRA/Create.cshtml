@model ISW_GASISW.Models.m_orden_compra

@{
    ViewBag.Title = "Create";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="panel-title">
            Crear - Orden de Compra
        </div>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="container">
                <fieldset>
                    <div class="row">
                        <div class="form-group col-lg-4">
                            Fecha Emitido
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.fecha_emitida)
                            @Html.ValidationMessageFor(model => model.fecha_emitida)
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-4">
                            Empleado que Emite la Orden
                        </div>
                        <div class="editor-field">
                            @Html.DropDownList("emitido_EMPLEADO_id", String.Empty)
                            @Html.ValidationMessageFor(model => model.emitido_EMPLEADO_id)
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-4">
                            Estado de la orden
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.estado)
                            @Html.ValidationMessageFor(model => model.estado)
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-4">
                            Empleado que Aprueba la orden
                        </div>
                        <div class="editor-field">
                            @Html.DropDownList("aprobado_EMPLEADO_id", String.Empty)
                            @Html.ValidationMessageFor(model => model.aprobado_EMPLEADO_id)
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-4">
                            Proveedor
                        </div>
                        <div class="editor-field">
                            @Html.DropDownList("PROVEEDOR_id", String.Empty)
                            @Html.ValidationMessageFor(model => model.PROVEEDOR_id)
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-4">
                            <input type="submit" class="btn btn-primary" value="Crear" />
                            <div class="btn btn-default">
                                @Html.ActionLink("Regresar", "Index")
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
