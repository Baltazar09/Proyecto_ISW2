@model ISW_GASISW.Models.proveedor

@{
    ViewBag.Title = "Editar - Proveedor";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="panel-title">
            Editar - Proveedor
        </div>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <fieldset>
                @Html.HiddenFor(model => model.id)

                <div class="form-group">
                    <div class="editor-label">
                        Nombre
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.nombre)
                        @Html.ValidationMessageFor(model => model.nombre)
                    </div>
                </div>
                <div class="form-group">
                    <div class="editor-label">
                        Telefono
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.telefono)
                        @Html.ValidationMessageFor(model => model.telefono)
                    </div>
                </div>
                <div class="form-group">
                    <div class="editor-label">
                        Email
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.email)
                        @Html.ValidationMessageFor(model => model.email)
                    </div>
                </div>
                <div class="form-group">
                    <div class="editor-label">
                        Direccion
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.direccion)
                        @Html.ValidationMessageFor(model => model.direccion)
                    </div>
                </div>
                <div class="form-group">
                    <div class="editor-label">
                        Municipio
                    </div>
                    <div class="editor-field">
                        @Html.DropDownList("MUNICIPIO_id", String.Empty)
                        @Html.ValidationMessageFor(model => model.MUNICIPIO_id)
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <div class="btn btn-default">
                        @Html.ActionLink("Regresar", "Index")
                    </div>
                </div>
            </fieldset>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
