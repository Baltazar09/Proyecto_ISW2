@model IEnumerable<ISW_GASISW.Models.accesos>

@{
    ViewBag.Title = "Opciones - Asignar Permisos a Rol";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="panel-title">
            Opciones - Asignar Permisos a Rol
        </div>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-2">
                <div class="btn btn-default linkBlanco">
                    @Html.ActionLink("Crear Nuevo", "Create")
                </div>
            </div>
            <div class="col-lg-4 col-lg-offset-2">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><span class="fa fa-search fa-2x"></span></span>
                        <input class="form-control input-lg" id="filter" type="text" />
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="container table-responsive toggle-circle-filled">
            <div class="col-lg-11">
                <table data-filter="#filter" data-filter-text-only="true" class="table" data-page-size="3">
                    <thead>
                        <tr>
                            <th data-sort-initial="true">
                                Rol
                            </th>
                            <th>
                                Area de Acceso
                            </th>
                            <th>
                                Permiso
                            </th>
                            <th data-sort-ignore="true"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.rol.nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.formularios.nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.permisos.nombre)
                                </td>
                                <td>
                                    <ul class="nav nav-pills">
                                        <li role="presentation">@Html.ActionLink("Editar", "Edit", new { id = item.id })</li>
                                        <li role="presentation">@Html.ActionLink("Detalles", "Details", new { id = item.id })</li>
                                        <li role="presentation">@Html.ActionLink("Eliminar", "Delete", new { id = item.id })</li>
                                    </ul>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="4">
                                <div class="pagination pagination-centered hide-if-no-paging"></div>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>