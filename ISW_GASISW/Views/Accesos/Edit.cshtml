@model ISW_GASISW.Models.accesos

@{
    ViewBag.Title = "Editar - Permisos Asignados a ROl";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="panel-title">
            Editar - Permisos Asignados a Rol
        </div>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                @Html.HiddenFor(model => model.id)
                <div class="form-group">
                    <div class="editor-label">
                        Rol
                    </div>
                    <div class="editor-field">
                        @Html.DropDownList("ROL_id", String.Empty)
                        @Html.ValidationMessageFor(model => model.ROL_id)
                    </div>
                </div>
                <div class="form-group">
                    <div class="editor-label">
                        Area de Acceso
                    </div>
                    <div class="editor-field">
                        @Html.DropDownList("FORMULARIOS_id", String.Empty)
                        @Html.ValidationMessageFor(model => model.FORMULARIOS_id)
                    </div>
                </div>
                <div class="form-group">
                    <div class="editor-label">
                        Permisos de Acceso
                    </div>
                    <div class="editor-field">
                        @Html.DropDownList("PERMISOS_id", String.Empty)
                        @Html.ValidationMessageFor(model => model.PERMISOS_id)
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <div class="btn btn-default">
                        @Html.ActionLink("Regresar", "Index")
                    </div>
                </div>
            </fieldset>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
