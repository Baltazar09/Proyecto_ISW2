@model ISW_GASISW.Models.usuario

@{
    ViewBag.Title = "Crear - Usuario";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="panel-title">
            Crear - Usuario
        </div>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="container">
                <fieldset>
                    <div class="row">
                        <div class="form-group col-lg-4">
                            Nombre de Usuario
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.nombre)
                            @Html.ValidationMessageFor(model => model.nombre)
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-4">
                            Password de Usuario
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.password)
                            @Html.ValidationMessageFor(model => model.password)
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-4">
                            Rol del Usuario
                        </div>
                        <div class="editor-field">
                            @Html.DropDownList("ROL_id", String.Empty)
                            @Html.ValidationMessageFor(model => model.ROL_id)
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-4">
                            Empleado
                        </div>
                        <div class="editor-field">
                            @Html.DropDownList("EMPLEADO_id", String.Empty)
                            @Html.ValidationMessageFor(model => model.EMPLEADO_id)
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-4">
                            <input type="submit" class="btn btn-primary" value="Crear" />
                            <div class="btn btn-default">
                                @Html.ActionLink("Regresar", "Index")
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
