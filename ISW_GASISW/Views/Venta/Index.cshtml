@model ISW_GASISW.Models.M_M_Venta
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="panel-title">
            Procesos - Ventas
        </div>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-2">
                <div class="btn btn-default linkBlanco">
                    @Html.ActionLink("Nueva Venta", "Create")
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-lg-offset-2">
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><span class="fa fa-search fa-2x"></span></span>
                    <input class="form-control input-lg" id="filter" type="text" />
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="container table-responsive toggle-circle-filled">
        <div class="col-lg-11">
            <table data-filter="#filter" data-filter-text-only="true" class="table" data-page-size="5">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Fecha de Venta</th>
                        <th>Registrada por</th>
                        <th data-hide="all">Detalles</th>
                        <th>Total Final</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ListaMV)
                    {
                        <tr>
                            <td>
                                @item.id
                            </td>
                            <td>
                                @item.fecha_venta
                            </td>
                            <td>
                                @item.empleado.nombre1
                            </td>
                            <td>
                                <table>
                                    <thead>
                                        <tr>
                                            <th hidden="hidden">ID Producto</th>
                                            <th>Producto</th>
                                            <th>Presentacion</th>
                                            <th>Categoria</th>
                                            <th>Cantidad</th>
                                            <th>Costo Unitario</th>
                                            <th>Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item2 in item.d_venta)
                                        {
                                            <tr>
                                                <td hidden="hidden">
                                                    @item2.id
                                                </td>
                                                <td>
                                                    @item2.producto.nombre
                                                </td>
                                                <td>
                                                    @item2.producto.presentacion_producto.nombre
                                                </td>
                                                <td>
                                                    @item2.producto.categoria_producto.nombre
                                                </td>
                                                <td>
                                                    @item2.cantidad_producto
                                                </td>
                                                <td>
                                                    $ @item2.producto.precio_venta_u c/u
                                                    </td>
                                                    <td>
                                                        $ @item2.total
                                                    </td>
                                                </tr>
                                        }
                                    </tbody>
                                </table>
                            </td>
                            <td>
                                $ @item.total
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="5">
                            <div class="pagination pagination-centered hide-if-no-paging"></div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>