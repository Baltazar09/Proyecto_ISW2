@model ISW_GASISW.Models.producto

@{
    ViewBag.Title = "Eliminar - Producto";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="panel-title">
            Eliminar - Producto
        </div>
    </div>
    <div class="panel-body">
        <h3>Esta seguro que desea eliminar este Producto?</h3>
        <fieldset>
            <div class="form-group">
                <div class="editor-label">
                    Nombre del Producto
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.nombre)
                </div>
            </div>
            <div class="form-group">
                <div class="editor-label">
                    Presentacion del Producto
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.presentacion_producto.nombre)
                </div>
            </div>
            <div class="form-group">
                <div class="editor-label">
                    Categoria del Producto
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.categoria_producto.nombre)
                </div>
            </div>
            <div class="form-group">
                <div class="editor-label">
                    Precion Unitario de Venta
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.precio_venta_u)
                </div>
            </div>
            <div class="form-group">
                <div class="editor-label">
                    Estado del Producto
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.estado)
                </div>
            </div>

            <div class="form-group">
                <div class="editor-label">
                    Proveedor del Producto
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.proveedor.nombre)
                </div>
            </div>

        </fieldset>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <input type="submit" value="Eliminar" class="btn btn-primary" />
                <div class="btn btn-default">
                    @Html.ActionLink("Regresar", "Index")
                </div>
            </div>
        }
    </div>
</div>