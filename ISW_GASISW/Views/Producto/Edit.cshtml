@model ISW_GASISW.Models.producto

@{
    ViewBag.Title = "Editar - Producto";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="panel-title">
            Editar - Categoria de Producto
        </div>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                @Html.HiddenFor(model => model.id)
                <div class="form-group">
                    <div class="editor-label">
                        Nombre del Producto
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.nombre)
                        @Html.ValidationMessageFor(model => model.nombre)
                    </div>
                </div>

                <div class="form-group">
                    <div class="editor-label">
                        Presentacion del Producto
                    </div>
                    <div class="editor-field">
                        @Html.DropDownList("PRESENTACION_PRODUCTO_id", String.Empty)
                        @Html.ValidationMessageFor(model => model.PRESENTACION_PRODUCTO_id)
                    </div>
                </div>
                <div class="form-group">
                    <div class="editor-label">
                        Categoria del Producto
                    </div>
                    <div class="editor-field">
                        @Html.DropDownList("CATEGORIA_PRODUCTO_id", String.Empty)
                        @Html.ValidationMessageFor(model => model.CATEGORIA_PRODUCTO_id)
                    </div>
                </div>
                <div class="form-group">
                    <div class="editor-label">
                        Precio de unitario de Venta
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.precio_venta_u)
                        @Html.ValidationMessageFor(model => model.precio_venta_u)
                    </div>
                </div>
                <div class="form-group">
                    <div class="editor-label">
                        Estado del Producto
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.estado)
                        @Html.ValidationMessageFor(model => model.estado)
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <div class="btn btn-default">
                        @Html.ActionLink("Regresar", "Index")
                    </div>
                </div>
            </fieldset>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
