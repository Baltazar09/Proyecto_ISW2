@model ISW_GASISW.Models.producto

@{
    ViewBag.Title = "Crear - Producto";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="panel-title">
            Crear - Producto
        </div>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="container">
                <fieldset>
                    <div class="row">
                        <div class="form-group col-lg-4">
                            Nombre del Producto
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.nombre)
                            @Html.ValidationMessageFor(model => model.nombre)
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-4">
                            Presentacion del Producto
                        </div>
                        <div class="editor-field">
                            @Html.DropDownList("PRESENTACION_PRODUCTO_id", String.Empty)
                            @Html.ValidationMessageFor(model => model.PRESENTACION_PRODUCTO_id)
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-4">
                            Categoria del Producto
                        </div>
                        <div class="editor-field">
                            @Html.DropDownList("CATEGORIA_PRODUCTO_id", String.Empty)
                            @Html.ValidationMessageFor(model => model.CATEGORIA_PRODUCTO_id)
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-4">
                            Precio Unitario de Venta
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.precio_venta_u)
                            @Html.ValidationMessageFor(model => model.precio_venta_u)
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-4">
                            Estado del Producto
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.estado)
                            @Html.ValidationMessageFor(model => model.estado)
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-4">
                            <input type="submit" class="btn btn-primary" value="Crear" />
                            <div class="btn btn-default">
                                @Html.ActionLink("Regresar", "Index")
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
